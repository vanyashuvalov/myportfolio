{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/projects/([^/]+)/([^/]+)",
      "dest": "/api/projects/[category]/[id].py"
    },
    {
      "src": "/api/channels/([^/]+)/latest",
      "dest": "/api/channels/[username]/latest.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.py"
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": "@telegram_bot_token",
    "TELEGRAM_CHAT_ID": "@telegram_chat_id"
  }
}
